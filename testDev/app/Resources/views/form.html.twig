{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
			<h3>Formulaire d'envoi de mail</h3>
			{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
			<div class="form-group">
				{# Génération du label. #}
				{{ form_label(form.nom, "Votre Nom : ", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}

				<div class="col-sm-10">
					{# Génération de l'input. #}
					{{ form_widget(form.nom, {'attr': {'class': 'form-control'}, 'required':'required'}) }}
				</div>
			</div>
			<div class="form-group">
				{# Génération du label. #}
				{{ form_label(form.prenom, "Votre prenom : ", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}

				<div class="col-sm-10">
					{# Génération de l'input. #}
					{{ form_widget(form.prenom, {'attr': {'class': 'form-control'}, 'required':'required'}) }}
				</div>
			</div>
			<div class="form-group">
				{# Génération du label. #}
				{{ form_label(form.email, "Votre adresse mail : ", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}

				<div class="col-sm-10">
					{# Génération de l'input. #}
					{{ form_widget(form.email, {'attr': {'class': 'form-control'}, 'required':'required'}) }}
				</div>
			</div>
			<div class="form-group">
				{# Génération du label. #}
				{{ form_label(form.telephone, "Votre numero de téléphone : ", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}

				<div class="col-sm-10">
					{# Génération de l'input. #}
					{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}, 'required':'required'}) }}
				</div>
			</div>
			<div class="form-group">
				{# Génération du label. #}
				{{ form_label(form.message, "Votre message : ", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}

				<div class="col-sm-10">
					{# Génération de l'input. #}
					{{ form_widget(form.message, {'attr': {'class': 'form-control'}, 'required':'required'}) }}
				</div>
			</div>
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Envoyer ma demande'}) }}
			{{ form_end(form) }}
		</div>
    </div>
{% endblock %}