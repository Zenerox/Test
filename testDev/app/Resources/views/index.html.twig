{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <h3>Connexion</h3>
			{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
			<div class="form-group">
				{# Génération du label. #}
				{{ form_label(form.identifiant, "Votre identifiant : ", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}

				<div class="col-sm-10">
					{# Génération de l'input. #}
					{{ form_widget(form.identifiant, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<div class="form-group">
				{# Génération du label. #}
				{{ form_label(form.mdp, "Votre mot de passe : ", {'label_attr': {'class': 'col-sm-10 control-label'}}) }}

				<div class="col-sm-10">
					{# Génération de l'input. #}
					{{ form_widget(form.mdp, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}, 'label': 'Me connecter'}) }}
			{{ form_end(form) }}
        </div>
    </div>
{% endblock %}